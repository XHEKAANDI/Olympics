        <Label Grid.Column="2" Grid.Row="7" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center">Pagina 1 di 269000</Label>
      
        <Button Grid.Column="6" Grid.Row="3" FontWeight="Bold" FontSize="15" Margin="5 5 5 5" HorizontalAlignment="Center" VerticalAlignment="Center">Azzera Filtri</Button>
