        <ComboBox Grid.Column="5" Grid.Row="3" Margin="0 15 0 15"/>
        <ComboBox Grid.Column="6" Grid.Row="7" Margin="10 10 10 10"/>

        <DataGrid Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="7" Margin="0,0,0,0" Grid.RowSpan="2"/>

       
        <Image Grid.Column="6" HorizontalAlignment="Left" Height="63" Width="80" Margin="9.6,10,0,0" Grid.RowSpan="2" VerticalAlignment="Top"  Source="Immagine/Logo.png" RenderTransformOrigin="0.506,0.803"/>




